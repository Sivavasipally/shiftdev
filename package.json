{
  "name": "devcanvas-ai",
  "displayName": "DevCanvas AI",
  "description": "AI-powered code assistant with deep codebase understanding",
  "version": "1.0.0",
  "publisher": "devcanvas",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Snippets"
  ],
  "keywords": [
    "ai",
    "assistant",
    "code-analysis",
    "documentation",
    "diagram"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "devcanvas-ai",
          "title": "DevCanvas AI",
          "icon": "media/icons/devcanvas-ai.svg"
        }
      ]
    },
    "views": {
      "devcanvas-ai": [
        {
          "type": "webview",
          "id": "devcanvas-ai.chatView",
          "name": "Chat",
          "when": "devcanvas-ai.enabled"
        },
        {
          "id": "devcanvas-ai.quickActions",
          "name": "Quick Actions",
          "when": "devcanvas-ai.enabled"
        }
      ],
      "explorer": [
        {
          "type": "webview",
          "id": "devcanvas-ai.chatViewExplorer",
          "name": "DevCanvas AI",
          "when": "devcanvas-ai.enabled",
          "visibility": "collapsed"
        }
      ]
    },
    "commands": [
      {
        "command": "devcanvas-ai.indexWorkspace",
        "title": "Index Current Workspace",
        "category": "DevCanvas AI",
        "icon": "$(search)"
      },
      {
        "command": "devcanvas-ai.clearIndex",
        "title": "Clear Index",
        "category": "DevCanvas AI",
        "icon": "$(trash)"
      },
      {
        "command": "devcanvas-ai.configure",
        "title": "Configure API Keys",
        "category": "DevCanvas AI",
        "icon": "$(settings-gear)"
      },
      {
        "command": "devcanvas-ai.generateReadme",
        "title": "Generate README",
        "category": "DevCanvas AI"
      },
      {
        "command": "devcanvas-ai.generateDiagram",
        "title": "Generate Architecture Diagram",
        "category": "DevCanvas AI"
      },
      {
        "command": "devcanvas-ai.cloneRepository",
        "title": "Clone Repository",
        "category": "DevCanvas AI",
        "icon": "$(cloud-download)"
      },
      {
        "command": "devcanvas-ai.showOnboarding",
        "title": "Show Getting Started Guide",
        "category": "DevCanvas AI",
        "icon": "$(rocket)"
      },
      {
        "command": "devcanvas-ai.showQuickStart",
        "title": "Quick Start",
        "category": "DevCanvas AI",
        "icon": "$(zap)"
      },
      {
        "command": "devcanvas-ai.analyzeZip",
        "title": "Analyze ZIP File",
        "category": "DevCanvas AI",
        "icon": "$(archive)"
      },
      {
        "command": "devcanvas-ai.analyzeFile",
        "title": "Analyze Current File",
        "category": "DevCanvas AI",
        "icon": "$(file-code)"
      },
      {
        "command": "devcanvas-ai.explainCode",
        "title": "Explain Selected Code",
        "category": "DevCanvas AI",
        "icon": "$(question)"
      },
      {
        "command": "devcanvas-ai.generateTests",
        "title": "Generate Tests",
        "category": "DevCanvas AI",
        "icon": "$(beaker)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "devcanvas-ai.generateReadme",
          "when": "explorerResourceIsFolder",
          "group": "1_devcanvas@1"
        },
        {
          "command": "devcanvas-ai.generateDiagram",
          "when": "explorerResourceIsFolder",
          "group": "1_devcanvas@2"
        },
        {
          "command": "devcanvas-ai.indexWorkspace",
          "when": "explorerResourceIsFolder",
          "group": "1_devcanvas@3"
        },
        {
          "command": "devcanvas-ai.cloneRepository",
          "when": "explorerResourceIsFolder",
          "group": "1_devcanvas@4"
        },
        {
          "command": "devcanvas-ai.analyzeZip",
          "when": "explorerResourceIsFolder",
          "group": "1_devcanvas@5"
        }
      ],
      "editor/context": [
        {
          "command": "devcanvas-ai.analyzeFile",
          "when": "editorHasSelection",
          "group": "1_devcanvas@1"
        },
        {
          "command": "devcanvas-ai.explainCode",
          "when": "editorHasSelection",
          "group": "1_devcanvas@2"
        },
        {
          "command": "devcanvas-ai.generateTests",
          "when": "editorHasSelection",
          "group": "1_devcanvas@3"
        }
      ],
      "editor/title": [
        {
          "command": "devcanvas-ai.analyzeFile",
          "when": "resourceExtname =~ /\\.(js|ts|py|java|cpp|c|cs|go|rs|php|rb)$/",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "devcanvas-ai.indexWorkspace",
          "when": "view == devcanvas-ai.chatView",
          "group": "navigation"
        },
        {
          "command": "devcanvas-ai.configure",
          "when": "view == devcanvas-ai.chatView",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "devcanvas-ai.cloneRepository",
          "when": "true"
        },
        {
          "command": "devcanvas-ai.analyzeZip",
          "when": "true"
        },
        {
          "command": "devcanvas-ai.analyzeFile",
          "when": "editorIsOpen"
        },
        {
          "command": "devcanvas-ai.explainCode",
          "when": "editorHasSelection"
        },
        {
          "command": "devcanvas-ai.generateTests",
          "when": "editorHasSelection"
        }
      ]
    },
    "keybindings": [
      {
        "command": "devcanvas-ai.explainCode",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e",
        "when": "editorHasSelection"
      },
      {
        "command": "devcanvas-ai.generateTests",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorHasSelection"
      },
      {
        "command": "devcanvas-ai.analyzeFile",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a",
        "when": "editorIsOpen"
      },
      {
        "command": "devcanvas-ai.chatView.focus",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d"
      }
    ],
    "configuration": {
      "title": "DevCanvas AI",
      "properties": {
        "devcanvas.userProfile": {
          "type": "object",
          "description": "User profile and API configuration"
        },
        "devcanvas.codebases": {
          "type": "array",
          "description": "Configured codebases for analysis"
        },
        "devcanvas.autoIndex": {
          "type": "boolean",
          "default": true,
          "description": "Automatically index workspace on startup"
        },
        "devcanvas.maxChunks": {
          "type": "number",
          "default": 10,
          "description": "Maximum number of code chunks to retrieve for context"
        },
        "devcanvas.chunkSize": {
          "type": "number",
          "default": 1000,
          "description": "Maximum size of code chunks in characters"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src/",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@eslint/js": "^9.0.0",
    "typescript": "^5.3.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.22.0"
  },
  "dependencies": {
    "@lancedb/lancedb": "^0.4.0",
    "axios": "^1.6.7",
    "cheerio": "^1.0.0-rc.12",
    "jszip": "^3.10.1",
    "yaml": "^2.3.4",
    "tree-sitter": "^0.20.4",
    "tree-sitter-java": "^0.20.2",
    "tree-sitter-javascript": "^0.20.1",
    "tree-sitter-typescript": "^0.20.3",
    "tree-sitter-python": "^0.20.4"
  }
}